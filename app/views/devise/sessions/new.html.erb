<center>
<h2>Iniciar sessión</h2>
<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <!--<%= f.label :correo %><br />-->
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Correo" %>
  </div>

  <div class="form-group">
    <!--<%= f.label :contraseña %><br />-->
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Contraseña" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :recordarme %>
    </div>
  <% end -%>
  <br>
  <div class="actions">
    <%= f.submit "Ingresar", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</center>