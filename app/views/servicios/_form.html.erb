  <% end %>

  <div class="form-group">
    
      <%= f.label :cod, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :cod, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :concepto, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :concepto, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :tarifa, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :tarifa, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
