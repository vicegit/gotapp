<div class="page-header">
  <%= link_to new_ctactecli_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva Cuenta Corriente Cliente
  <% end %>
  <h1>Lista de Cuenta Corriente Cliente</h1>
</div>

<div class="table-responsive">
  <table id="tablactactecli" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Cliente</th>
            <th>Saldo</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @ctacteclis) do |ctactecli| %>
            <td><%= ctactecli.cliente.nombre %></td>
            <td><%= ctactecli.saldo %></td>
            <td><%= link_to 'Ver', ctactecli, class: "btn btn-default" %></td>
        <td><%= link_to 'Editar', edit_ctactecli_path(ctactecli), class: "btn btn-primary" %></td>
        <td><%= link_to 'Eliminar', ctactecli, method: :delete, data: { confirm: 'Estás seguro?' }, class: "btn btn-danger" %></td>
      <% end %>
    </tbody>
  </table>
</div>

