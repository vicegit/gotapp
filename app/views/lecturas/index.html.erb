<div class="page-header">
  <%= link_to new_lectura_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Lectura
  <% end %>
  <h1>Listing lecturas</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Cliente</th>
            <th>Periodo</th>
            <th>Fecha</th>
            <th>Lector</th>
            <th>Anterior</th>
            <th>Actual</th>
            <th>Consumo</th>
            <th>Exceso</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @lecturas) do |lectura| %>
            <td><%= lectura.cliente_id %></td>
            <td><%= lectura.periodo_id %></td>
            <td><%= lectura.fecha %></td>
            <td><%= lectura.lector %></td>
            <td><%= lectura.anterior %></td>
            <td><%= lectura.actual %></td>
            <td><%= lectura.consumo %></td>
            <td><%= lectura.exceso %></td>
            <td><%= link_to 'Show', lectura %></td>
        <td><%= link_to 'Edit', edit_lectura_path(lectura) %></td>
        <td><%= link_to 'Destroy', lectura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
