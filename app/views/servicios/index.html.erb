<div class="page-header">
  <%= link_to new_servicio_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Servicio
  <% end %>
  <h1>Listing servicios</h1>
</div>

<div class="table-responsive">
  <table id="tablaservicio" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Cod</th>
        <th>Concepto</th>
        <th>Tarifa</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @servicios) do |servicio| %>
            <td><%= servicio.cod %></td>
            <td><%= servicio.concepto %></td>
            <td><%= servicio.tarifa %></td>
            <td><%= link_to 'Show', servicio %></td>
        <td><%= link_to 'Edit', edit_servicio_path(servicio) %></td>
        <td><%= link_to 'Destroy', servicio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $('#tablaservicio').DataTable({
  });
</script>