<%= form_for(@factura, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @factura.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@factura.errors.count, "error") %> prohibited this factura from being saved:</h4>

      <ul>
      <% @factura.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    
      <%= f.label :nrofact, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :nrofact, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :cliente_id, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :cliente_id, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :condicion, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :condicion, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :fecha, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_select :fecha, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :iva, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :iva, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :erssan, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :erssan, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :total, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :total, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
