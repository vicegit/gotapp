<%= form_for(@ctactecli, html: { class: "form-horizontal", role: "form" }) do |f| %>
<% if @ctactecli.errors.any? %>
<div class="alert alert-danger alert-dismissable" role="alert">
  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4><%= pluralize(@ctactecli.errors.count, "error") %> prohibited this ctactecli from being saved:</h4>

  <ul>
    <% @ctactecli.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">

  <div class="col-md-6">
    <div class="form-group">

      <%= f.label :clietne_id, class: "col-sm-3 control-label" do %>
      Cliente
      <span class="required">*</span>
      <% end %>    
      <div class="col-sm-9">
        <%= f.text_field :cliente_id, class: "form-control" %>
      </div>

    </div>
  </div>

</div>

<div class="page-header">
  <h2>Detalle Cuenta Corriente Cliente</h2>
</div>

<div class="row">
  <div class="col-md-12 table-responsive">
    <table id="tabladetalle" class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Fecha detalle</th>
          <th>Tipo detalle</th>
          <th>Debe</th>
          <th>Haber</th>
        </tr>
      </thead>
        <% @detalles.each do |detalle| -%>
          <tr>  
            <td><%= detalle.fechadetalle %></td>
            <td><%= detalle.tipodetalle %></td>
            <td><%= detalle.debe %></td>
            <td><%= detalle.haber %></td>
          </tr>
          <% end %>
      <tbody>

      </tbody>
    </table>
  </div>
</div>

<div class="row">

  <div class="col-md-4 col-md-offset-8">
    <div class="form-group">

      <%= f.label :saldo, class: "col-sm-3 control-label" do %>
      Saldo
      <span class="required">*</span>
      <% end %>
      <div class="col-sm-9">
        <%= f.number_field :saldo, class: "form-control", disabled: true %>
      </div>

    </div>
  </div>

</div>

<div class="row">

  <div class="col-md-4 col-md-offset-8 ">
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= f.submit "Guardar", class: "btn btn-primary" %>
        <%= link_to "Cancelar", ctacteclis_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>

</div>

<% end %>