<div class="page-header">
  <%= link_to new_medidor_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Medidor
  <% end %>
  <h1>Lista de medidores</h1>
</div>

<div class="table-responsive">
  <table id="tablamedidor" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Numero</th>
            <th>Medicion</th>
            <th>Estado medidor</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @medidors) do |medidor| %>
            <td><%= medidor.numero %></td>
            <td><%= medidor.medicion %></td>
            <% if medidor.estado_medidor == true %>
              <td>ACTIVO</td>
            <% else %>
              <td>INACTIVO</td>
            <% end %>
            <td><%= link_to 'Ver', medidor, class: "btn btn-default" %></td>
        <td><%= link_to 'Editar', edit_medidor_path(medidor), class: "btn btn-primary" %></td>
        <td><%= link_to 'Eliminar', medidor, method: :delete, data: { confirm: 'Estas seguro?' }, class: "btn btn-danger" %></td>
      <% end %>
    </tbody>
  </table>
</div>

<script>
$(document).ready(function() {
  $('#tablamedidor').DataTable({

    "order": [ 0, "asc" ],

    "language": {
      "sProcessing":     "Procesando...",
      "sLengthMenu":     "Mostrar _MENU_ registros",
      "sZeroRecords":    "No se encontraron resultados",
      "sEmptyTable":     "Ningún dato disponible en esta tabla",
      "sInfo":           "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
      "sInfoEmpty":      "Mostrando registros del 0 al 0 de un total de 0 registros",
      "sInfoFiltered":   "(filtrado de un total de _MAX_ registros)",
      "sInfoPostFix":    "",
      "sSearch":         "Buscar:",
      "sUrl":            "",
      "sInfoThousands":  ",",
      "sLoadingRecords": "Cargando...",
      "oPaginate": {
        "sFirst":    "Primero",
        "sLast":     "Último",
        "sNext":     "Siguiente",
        "sPrevious": "Anterior"
      },
      "oAria": {
        "sSortAscending":  ": Activar para ordenar la columna de manera ascendente",
        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
      }
    }
  });
});
</script>